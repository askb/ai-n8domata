## Autoscaling
COMPOSE_PROJECT_NAME=your-project-name
COMPOSE_FILE_PATH=/app/docker-compose.yml
GENERIC_TIMEZONE=America/New_York
MIN_REPLICAS=1
MAX_REPLICAS=5
SCALE_UP_QUEUE_THRESHOLD=5
SCALE_DOWN_QUEUE_THRESHOLD=1
POLLING_INTERVAL_SECONDS=10
COOLDOWN_PERIOD_SECONDS=10
POLL_INTERVAL_SECONDS=5
N8N_QUEUE_BULL_GRACEFULSHUTDOWNTIMEOUT=300
N8N_GRACEFUL_SHUTDOWN_TIMEOUT=300

## Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
QUEUE_NAME_PREFIX=bull
QUEUE_NAME=jobs
QUEUE_BULL_REDIS_HOST=redis
QUEUE_HEALTH_CHECK_ACTIVE=true

## Postgres
POSTGRES_HOST=postgres
POSTGRES_DB=n8n
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password
PGDATA=/var/lib/postgresql/data/pgdata
DB_TYPE=postgresdb

## N8N
N8N_HOST=your-domain.com
N8N_WEBHOOK=your-domain.com
N8N_WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_URL=https://your-domain.com
N8N_EDITOR_BASE_URL=https://your-domain.com
N8N_PROTOCOL=https
N8N_PORT=5678
N8N_DIAGNOSTICS_ENABLED=false
N8N_USER_FOLDER=/n8n/main
N8N_SECURE_COOKIE=false
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=false
N8N_ENCRYPTION_KEY=your-32-character-encryption-key
N8N_USER_MANAGEMENT_JWT_SECRET=your-64-character-jwt-secret
N8N_WORKER_SERVICE_NAME=n8n-worker
EXECUTIONS_MODE=queue
OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true
N8N_TASK_BROKER_URL=http://n8n:5679
N8N_COMMAND_RESPONSE_URL=http://n8n:5679
N8N_TASK_BROKER_PORT=5679
N8N_RUNNERS_AUTH_TOKEN=your-64-character-runners-auth-token
NODE_FUNCTION_ALLOW_EXTERNAL=ajv,ajv-formats,puppeteer,ffmpeg,git,graphicsmagick,openssh-client
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# N8N Data Retention Settings
N8N_EXECUTIONS_DATA_PRUNE=true
N8N_EXECUTIONS_DATA_MAX_AGE=300
N8N_EXECUTIONS_DATA_PRUNE_MAX_COUNT=5000
N8N_EXECUTIONS_DATA_PRUNE_TIMEOUT=3600
N8N_PAYLOAD_SIZE_MAX=1048576

# Binary data cleanup
N8N_BINARY_DATA_TTL=720

# Execution settings
N8N_EXECUTIONS_DATA_SAVE_ON_SUCCESS=last
N8N_EXECUTIONS_DATA_SAVE_ON_ERROR=all
N8N_EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# Additional performance settings
N8N_EXECUTIONS_DATA_PRUNE_HARD_DELETE_BUFFER=100
N8N_EXECUTIONS_DATA_PRUNE_HARD_DELETE_INTERVAL=15

## Short Video Maker
PEXELS_API_KEY=your-pexels-api-key
SHORT_VIDEO_MAKER_HOST=short-video-maker.your-domain.com

## Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token

## Tailscale (Optional)
TAILSCALE_IP=

# MinIO
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=your-minio-password

# NCA Toolkit S3 Auth
NCAT_API_KEY=your-ncat-api-key
S3_ENDPOINT_URL=http://miniio:9000
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=nca-toolkit
S3_REGION=None
S3_PUBLIC_URL=https://miniio.your-domain.com

# Stable Diffusion optional override
STABLE_DIFFUSION_CLI_ARGS=--listen

# Public service URLs and Traefik host configuration
DOMAIN_NAME=your-domain.com
TRAEFIK_HOST=traefik.your-domain.com
SHORT_VIDEO_MAKER_HOST=short-video-maker.your-domain.com
AI_AGENT_HOST=ai-agent.your-domain.com
MINIO_API_HOST=minio.your-domain.com
MINIO_CONSOLE_HOST=minio-console.your-domain.com
KOKORO_TTS_HOST=kokoro-tts.your-domain.com
BASEROW_HOST=baserow.your-domain.com
NCA_TOOLKIT_HOST=nca-toolkit.your-domain.com
CROPPER_HOST=cropper.your-domain.com
STABLE_DIFFUSION_HOST=stable-diffusion.your-domain.com
SVD_HOST=svd.your-domain.com
WAN21_HOST=wan21.your-domain.com
COGVIDEO_HOST=cogvideo.your-domain.com

# Security
IP_WHITELIST_RANGE=your.ip.address.here/32

